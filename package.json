{
  "name": "hyperaudio-pad",
  "version": "1.0.0",
  "description": "Hyperaudio Player and Remix Pad",
  "author": "Laurian Gridinoc <laurian@gridinoc.name> (http://gridinoc.com)",
  "contributors": [
    "Mark Boas <markb@happyworm.com> (http://happyworm.com)",
    "Mark Panaghiston <markp@happyworm.com> (http://happyworm.com)"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hyperaudio/hyperaudio-pad.git"
  },
  "bugs": {
    "url": "https://github.com/hyperaudio/hyperaudio-pad/issues"
  },
  "browserslist": [
    "> 1%"
  ],
  "homepage": "https://github.com/hyperaudio/hyperaudio-pad#readme",
  "keywords": [
    "audio",
    "video",
    "transcript"
  ],
  "main": "dist/index.js",
  "scripts": {
    "start": "yarn dev",
    "dev": "webpack-dev-server --progress",
    "build": "rimraf lib/* dist/* && babel src -d lib --ignore .test.js && cross-env NODE_ENV=production webpack -p --progress && cp src/*.html dist/ && cp public/* dist/",
    "lint": "eslint src webpack.config.babel.js --ext .js,.jsx",
    "test": "yarn lint && flow && echo jest --coverage",
    "__precommit": "yarn test",
    "__prepush": "yarn test && yarn build"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "debug": "^2.6.8"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.0",
    "babel-preset-env": "^1.5.2",
    "babel-preset-flow": "^6.23.0",
    "cross-env": "^5.0.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-config-prettier": "^2.2.0",
    "eslint-plugin-compat": "^1.0.4",
    "eslint-plugin-flowtype": "^2.34.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^5.0.1",
    "eslint-plugin-prettier": "^2.1.2",
    "eslint-plugin-react": "^7.0.1",
    "flow-bin": "^0.48.0",
    "jest": "^20.0.4",
    "prettier": "^1.4.4",
    "rimraf": "^2.6.1",
    "webpack": "^3.0.0",
    "webpack-dev-server": "^2.5.0"
  }
}
